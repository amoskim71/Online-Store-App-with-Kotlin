<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fut_bc_2"
    android:orientation="vertical"
    tools:context=".AmountFragment">


    <EditText
        android:id="@+id/edtEnterAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Amount..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/fut_but"
        android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
        android:drawableRight="@drawable/ic_add_shopping_cart_black_24dp"
        android:text="Add to Cart" />

</LinearLayout>